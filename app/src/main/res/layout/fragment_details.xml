<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app_color"
    android:textAlignment="inherit">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/antic_slab_regular"
        android:text="Spider-man"
        android:textColor="@color/white"
        android:textSize="44sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextTimeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/antic_slab_regular"
                android:text="2021 - 2h 28min "
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="244dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/facebook" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="8dp"
                    app:srcCompat="@drawable/whatsapp" />

                <ImageView
                    android:id="@+id/ImageFilm"
                    android:layout_width="160dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:baselineAlignBottom="false"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/image_film" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="36dp"
                    app:srcCompat="@drawable/star" />

                <TextView
                    android:id="@+id/textViewVote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:text="4,5"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/TextViewTag3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="109dp"
                android:background="@drawable/border_radius_tag"
                android:padding="2dp"
                android:text="Avventura"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/TextViewTag2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_radius_tag"
                android:padding="2dp"
                android:text="Azione"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/textViewReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="Con l'identità di Spider-Man rivelata, Peter chiede aiuto al Dottor Strange. Qualcosa va storto e il multiverso diventa la più grande minaccia. Ora lui deve scoprire cosa significa veramente essere l’Uomo Ragno." />

            <TextView
                android:id="@+id/TextViewTag1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="112dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_radius_tag"
                android:padding="2dp"
                android:text="Fantastico"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="8sp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textViewRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:layout_conversion_absoluteHeight="14dp"
                tools:layout_conversion_absoluteWidth="13dp" />

            <TextView
                android:id="@+id/textViewComment"
                android:layout_width="240dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_radius"
                android:backgroundTint="#323232"
                android:fontFamily="@font/arimo"
                android:padding="5dp"
                android:text=" Bellissimo film"
                android:textColor="@color/white"
                tools:layout_conversion_absoluteHeight="100dp"
                tools:layout_conversion_absoluteWidth="250dp" />

            <ImageView
                android:id="@+id/logoDetails"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textColor="@color/white"
                tools:layout_conversion_absoluteHeight="36dp"
                tools:layout_conversion_absoluteWidth="193dp"
                tools:text="Pronto alla visione? \n\t\t\t\t\tClicca sul pulsante a lato" />

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/trailer"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                app:autoPlay="false"
                app:videoId="ZBPAGbR6AHM"
                tools:layout_conversion_absoluteHeight="140dp"
                tools:layout_conversion_absoluteWidth="411dp"
                tools:ignore="MissingClass" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="84dp"
                app:srcCompat="@drawable/star"
                tools:layout_conversion_absoluteHeight="15dp"
                tools:layout_conversion_absoluteWidth="15dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>